@model RegisterVM

@if (TempData["Confirm"] != null)
{
    <p style="background-color: lawngreen; color: white; padding: 5px;margin-bottom: 20px 0;text-align:center;">Qeydiyyatdan uğurla keçdiniz. Elektron ünvanınıza daxil olub hesabınızı təsdiqləyin.</p>
}

<section>
    <div class="wrapper">
        <form method="post" asp-controller="Account" asp-action="Register" class="mt-5">
            <div class="form-group">
                <label asp-for="FirstName">Ad</label>
                <input class="form-control" asp-for="FirstName" />
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Soyad</label>
                <input class="form-control" asp-for="LastName" />
                <span asp-validation-for="LastName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input class="form-control" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber">Telefon nömrəsi</label>
                <input class="form-control" asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName">Istifadəçi adı</label>
                <input class="form-control" asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Şifrə</label>
                <input class="form-control" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Təsdiq şifrəsi</label>
                <input class="form-control" asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <input class="form-control btn btn-primary" type="submit" value="Qeydiyyatdan keç" />
        </form>
        <div class="clear"></div>
    </div>
</section>