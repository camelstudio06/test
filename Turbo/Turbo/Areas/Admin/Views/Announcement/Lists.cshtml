@model  IEnumerable<Announcement>


@{
    int number = 1;
}

    <h3>Elanlar</h3>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Sıra</th>
                <th>Marka</th>
                <th>Model</th>
                <th>Qiymət</th>
                <th>İl</th>
                <th>Şəhər</th>
                <th>VIP</th>
                <th>Ətraflı məlumat</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var announce in Model)
            {
                <tr>
                    <td>@(number++)</td>
                    <td>@announce.Automobile.Model.Brand.Name</td>
                    <td>@announce.Automobile.Model.Name</td>
                    <td>@announce.Automobile.Price  AZN</td>
                    <td>@announce.Automobile.Year.Year</td>
                    <td>@announce.Location.Name</td>
                    @if (announce.IsVIP == true)
                    {
                        <td>Hə</td>
                    }
                    else
                    {
                        <td>Yox</td>
                    }
                    <td>
                        <a asp-area="Admin" asp-controller="Announcement" asp-action="ListsItem" asp-route-id="@announce.Id">
                            Daha çox
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

