@model  NewsPost

@{
    ViewData["Title"] = "Create";
}

<div class="col-12">
    <h3>Xəbər əlavə et</h3>
</div>
    <section>
        <div class="wrapper">
            <form method="post" asp-area="Admin" asp-controller="News" asp-action="Create" enctype="multipart/form-data"  class="mt-5">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Title">Başlıq</label>
                    <input class="form-control" asp-for="Title" />
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShortInfo">Qısa məlumat</label>
                    <input class="form-control" asp-for="ShortInfo" />
                    <span asp-validation-for="ShortInfo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MainArticle">Mətn</label>
                    <input class="form-control" asp-for="MainArticle" />
                    <span asp-validation-for="MainArticle"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo">Şəkil yüklə</label>
                    <input class="form-control" asp-for="Photo" />
                    <span asp-validation-for="Photo"></span>
                </div>
                <input class="form-control btn btn-primary" type="submit" value="Dərc et" />
            </form>
        </div>
    </section>
