@model NewsPost

@{
    ViewData["Title"] = "Create";
}

<div class="col-12">
    <h3>Xəbərin silinməsi</h3>
</div>
<section>
    <div class="wrapper">
        <div class="col-12">
            <img src="~/img/@Model.PhotoURL" />
        </div>
        <form method="post" asp-area="Admin" asp-controller="News" asp-action="Delete" class="mt-5">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Title">Başlıq</label>
                <input class="form-control" asp-for="Title" value="@Model.Title" disabled/>
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortInfo">Qısa məlumat</label>
                <input class="form-control" asp-for="ShortInfo" value="@Model.ShortInfo" disabled/>
                <span asp-validation-for="ShortInfo"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainArticle">Mətn</label>
                <input class="form-control" asp-for="MainArticle" value="@Model.MainArticle" disabled/>
                <span asp-validation-for="MainArticle"></span>
            </div>
            <input class="form-control btn btn-danger" type="submit" value="Sil" />
        </form>
    </div>
</section>
