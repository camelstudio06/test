    <div class="wrapper">
        <div class="sidebar" data-color="purple" data-image="~/Admin/img/sidebar-5.jpg">

            <!--

                Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
                Tip 2: you can also add an image using data-image tag

            -->

            <div class="sidebar-wrapper">
                <div class="logo">
                    <a asp-controller="Home" asp-action="Index" asp-area="Admin">
                        Avtomobil portalının idarəetmə sistemi
                    </a>
                </div>
                <div class="mt-3">
                    <strong>
                        <a asp-area="Admin" asp-controller="Account" asp-action="Logout" style="background-color:white;color:black;padding:5px;">
                            Hesabdan çıx
                        </a>
                    </strong>
                </div>

                <ul class="nav">
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                        <a asp-controller="Home" asp-action="Index" asp-area="Admin">
                            <i class="pe-7s-graph"></i>
                            <p>Ana səhifə</p>
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Lists" ? "active" : "")">
                        <a asp-controller="Announcement" asp-action="Lists" asp-area="Admin">
                            <i class="pe-7s-user"></i>
                            <p>Elanlar</p>
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Posts" ? "active" : "")">
                        <a asp-controller="News" asp-action="Posts" asp-area="Admin">
                            <i class="pe-7s-user"></i>
                            <p>Xəbərlər</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <div class="container">
                @RenderBody()
            </div>
        </div>

    </div>







    <!--   Core JS Files   -->
